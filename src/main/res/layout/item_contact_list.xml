<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_contact_index"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="#ebebeb"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:textColor="#888888"
        android:textSize="14sp"
        android:visibility="gone" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#d9d9d9"
        android:visibility="gone"
        />



    <RelativeLayout
        android:id="@+id/re_contact_item"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/contact_list_item_bg"
        android:clickable="true"
        >

        <ImageView
            android:id="@+id/iv_avatar_item_contact"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/default_useravatar" />

        <TextView
            android:id="@+id/tv_name_item_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/iv_avatar_item_contact"
            android:text="微信客服"
            android:textColor="#353535"
            android:textSize="16sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#d9d9d9"
        />


</LinearLayout>